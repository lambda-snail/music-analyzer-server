<?xml version="1.0" encoding="UTF-8"?>
<messages>
    <message id="processing-page">

        <div class="card" style="m-2 w-50">
            <div class="card-header">
                <div class="d-flex" style="gap:2rem">
                    ${file-drop}
                    <div class="d-flex w-25">
                        ${yt-input}
<!--                        <button class="">Get from YouTube</button>-->
                        ${yt-button}
                    </div>
                </div>
            </div>
            <div class="card-body">

                ${file-list}

            </div>
        </div>

    </message>

    <message id="file-view-component">
        <div class="container w-25 h-50">
            <ul class="list-group">
                ${files}
            </ul>
        </div>
    </message>

    <message id="file-view-component-row">
        <li class="list-group-item d-flex justify-content-between rounded">${file-name} <button class="btn btn-danger">Remove</button></li>
    </message>
</messages>